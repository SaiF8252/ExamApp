@model ExamApp.Models.Product

@{
    ViewBag.Title = "Product Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3 overflow-hidden">
        <div class="row g-0">
            <!-- Product Image -->
            <div class="col-md-5 d-flex align-items-center justify-content-center bg-light p-3">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Url.Content(Model.ImagePath)" class="img-fluid rounded shadow-sm" alt="@Model.MedicineName" style="max-height: 350px;" />
                }
                else
                {
                    <div class="text-muted text-center">No Image Available</div>
                }
            </div>

            <!-- Product Info -->
            <div class="col-md-7">
                <div class="card-body">
                    <h2 class="card-title text-primary fw-bold">@Model.MedicineName</h2>
                    <hr />

                    <p class="mb-3">
                        <strong>@Html.DisplayNameFor(m => m.StripPrice): </strong>
                        <span class="text-success fs-4 fw-semibold">@Html.DisplayFor(m => m.StripPrice) ৳</span>
                        <strong>@Html.DisplayNameFor(m => m.UnitPrice): </strong>
                        <span class="text-success fs-4 fw-semibold">@Html.DisplayFor(m => m.UnitPrice) ৳</span>
                    </p>

                  

                    <div class="mt-4">
                        @Html.ActionLink("✏️ Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning me-2 px-4" })
                        @Html.ActionLink("⬅️ Back to List", "Index", null, new { @class = "btn btn-secondary px-4" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
