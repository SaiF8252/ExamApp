@model IEnumerable<ExamApp.Models.Product>
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
<p>@Html.ActionLink("Create New Product", "Create", null, new { @class = "btn btn-primary mb-3" })</p>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Strip Price</th>
            <th>Unit Price</th>
            <th>Stock (Units)</th>
            <th colspan="4">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content(item.ImagePath)" style="height:50px;" />
                    }
                </td>
                <td>@item.MedicineName</td>
                <td>@item.StripPrice.ToString("C")</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.StockQuantity</td>
                <td class="card-footer">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "custom-btn edit" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "custom-btn details" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "custom-btn delete" })
                    <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#addStockModal-@item.Id">
                        Add Stock
                    </button>

                </td>
                      
                <div class="modal fade" id="addStockModal-@item.Id" tabindex="-1" aria-labelledby="addStockLabel-@item.Id" aria-hidden="true">
                
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    @using (Html.BeginForm("AddStock", "Product", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("productId", item.Id)
                                        <div class="modal-header">
                                            <h5 class="modal-title">Add Stock for @item.MedicineName</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label>Stock to Add (Strips)</label>
                                                <input type="number" name="stripQty" class="form-control" min="1" required />
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-success">Add</button>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>

                                    }
                                
                                </div>
                            </div>
                        </div>
               
                
            </tr>

        }
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
